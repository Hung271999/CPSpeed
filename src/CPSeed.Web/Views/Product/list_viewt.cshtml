@model PagedList.IPagedList<CPSeed.Models.Product>
@using PagedList.Mvc;
@using CPSeed.Models;
<style>
    .pagination {
        display: inline-block;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border: 1px solid #4CAF50;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

    .MenuTrang li {
        display: inline;
    }
</style>
<div role="tabpanel" class="tab-pane show on" id="list-view">
    <div class="list-view-box">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            @* <div class="type-lb">
                                    <p class="new">New</p>
                                </div>*@
                            <img src="~/images/Product/@item.image" class="img-fluid" alt="Image">
                            <div class="mask-icon">
                                <ul>
                                    <li><a href="@Url.Action("productDetail", "ProDuct", new { id = item.ProductID})" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
                    <div class="why-text full-width">
                        <h4>@item.ProductName</h4>
                        @if (item.SellPrice == null || item.SellPrice == 0)
                        {
                            <h5> @item.BuyPriceCurrent</h5>
                        }
                        else
                        {
                            <h5> <del>@item.BuyPriceCurrent VNĐ</del> @item.SellPrice</h5>
                        }
                        <p> @item.description</p>
                        <a class="btn hvr-hover" href="#">Add to Cart</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="MenuTrang" style="text-align:center">
        @Html.PagedListPager(Model, page => Url.Action("list_viewt", new { id= ViewBag.id, page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "list-view" }))
    </div>
</div>


