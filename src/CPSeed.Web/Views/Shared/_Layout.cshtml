    <script type="text/javascript">
        $(function () {
            $('.slider').slick({
                infinite: true,
                slidesToShow: 4,
                slidesToScroll: 4,
                prevArrow: '<span class="prev_arrow"><i class="fas fa-angle-left"></i></span>',
                nextArrow: '<span class="next_arrow"><i class="fas fa-angle-right"></i></span>',
            });
        });
    </script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });

        function getInputValue() {
            // Selecting the input element and get its value
            var inputVal = document.getElementById("myInput").value;
            var booksDiv = $("#multiple")
            $.ajax({
                url: '/Home/Seach',
                type: 'GET',
                data: { "key": inputVal },
                dataType: 'html',
                success: function (data) {
                    booksDiv.html(data);
                },
                error: function () {
                    alert('Có lỗi xảy ra.')
                }
            });
        }
    </script>
    <script type="text/javascript">
        function AddToCart(item) {

            $('.cart').click(function (event) {
                event.preventDefault();
            });

            var id = $(item).attr('itemid');
            var obj = {
                id: id
            };

            $.ajax({
                url: "/Cart/AddToCart",
                method: "POST",
                data: obj,
                success: function (data) {
                    //$('#cart-counter').text(data);
                    $('.cart-noti').removeClass('d-none');
                    $('.cart-noti').fadeIn();
                    setTimeout(function () {
                        $('.cart-noti').fadeOut();
                    }, 900);
                },
                error: function () {
                    alert('There are some problems to add item.');
                }
            });
        }

        function AddToCartInProductDetails(item) {
            //var id = $(item).attr('itemid');
            //var count = $('.quantity').val();
            var obj = {
                id: $(item).attr('itemid'),
                count: $('.quantity').val().trim()
            };
            $.ajax({
                url: "/Cart/AddToCartInDetails",
                method: "POST",
                data: obj,
                success: function (data) {
                    //$('#cart-counter').text(data);
                    $('.cart-noti').removeClass('d-none');
                    $('.cart-noti').fadeIn();
                    setTimeout(function () {
                        $('.cart-noti').fadeOut();
                    }, 900);
                },
                error: function () {
                    alert('There are some problems to add item.');
                }
            });
        }

        function UpdateQuantity(item) {
            var id = $(item).attr('itemid');
            var count = $(".quantity-" + id).val();
            var obj = {
                id: id,
                count: count
            }
            $.ajax({
                url: '/Cart/UpdateQuantity',
                method: 'POST',
                data: obj,
                success: function (data) {
                    let quantity = $(".quantity-" + id).val();
                    let price = $(".price-" + id).text();
                    let total = quantity * price;
                    $('.total-' + id).text(total.toString());
                    $('.grand-total').text(data.totalMoney.toString());
                },
                error: function () {
                    alert('there is some problem.')
                }
            });
        }

        function totalMoney() {
            $.ajax({
                url: '/Cart/TotalMoney',
                method: 'POST',
                data: null,
                success: function (data) {
                    console.log(data)
                },
                error: function () {
                    alert('there are some problems.')
                }
            });
        }
    </script>
