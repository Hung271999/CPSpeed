@model IEnumerable<CPSeed.Models.NewDetail>
<div class="featured-products-box owl-carousel owl-theme owl-loaded owl-drag" style="color: #005b36">
    <div class="container"> 
        <div class="row" style="margin-bottom:10px;">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h2 class="noo-sh-title" style="color: #005b36; float: left; margin-top:50px; border-bottom: 2.5px solid #789A3D">Thư Viện hình ảnh</h2>
                </div>
            </div>
        </div>
        <div class="owl-stage-outer">
            <div class="owl-stage" style="transform: translate3d(-3093px, 0px, 0px); transition: all 0.25s ease 0s; width: 4500px;">
                @foreach (var item3 in Model)
                {
                    <div class="owl-item" style="width: 266.25px; margin-right: 15px;">
                        <div class="">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <img src="~/images/@item3.image" class="img-fluid" alt="Image">
                                </div>
                            </div>

                            <div class="blog-content">
                                <div class="wp-content-news" style="margin-top:22px;">
                                    <a href="" class="content-news-txt" style="font-family: fml-bold; font-size: 22px; line-height: 23px; transition: 0.3s; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; color: #161616;line-height:35px">@item3.Title</a>
                                    <div class="wp-btn-detail" style=" margin-top: 18px; display: flex; align-items: center; flex-wrap: wrap;">
                                        <div class="btn-detail" style=" margin-right: 0; margin-bottom: 5px;">
                                            <a style=" color: #363636; background: #ECECEC; font-size: 15px; line-height: 17px; padding:9px 13px; padding-bottom: 8px; display: inline-block; border-radius: 100px; transition: all 0.3s; ">Thư viện CPSeed</a>
                                        </div>
                                        <p class="btn-detail-time" style="margin-left:10px">@item3.CreateDate</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


