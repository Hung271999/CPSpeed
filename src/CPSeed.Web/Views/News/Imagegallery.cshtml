@model IEnumerable<CPSeed.Models.NewDetail>
<div class="featured-products-box owl-carousel owl-theme owl-loaded owl-drag" style="color: #005b36;left:-160px">
    <div class="col-lg-12"style="margin-top:60px">
        <div class="title-all text-center" style="margin-left:-887px">
            <h2 class="noo-sh-title" style="color: #005b36;margin-left:60px">Thư Viện hình ảnh</h2>
        </div>
    </div>
    <div class="owl-stage-outer" style="margin-left:208px">
        <div class="owl-stage" style="transform: translate3d(-3093px, 0px, 0px); transition: all 0.25s ease 0s; width: 4500px;">
            @foreach (var item3 in Model)
            {
                <div class="owl-item" style="width: 266.25px; margin-right: 15px;">
                    <div class="item">
                        <div class="products-single fix" style="box-shadow: 0px 0px 15px rgba(0,0,0,0.15);">
                            <div class="box-img-hover">
                                <img src="~/images/@item3.image" class="img-fluid" alt="Image">
                            </div>
                            <div class="why-text" style="background: none">
                                <a style="font-size: 17px; line-height: 23px; transition: 0.3s; height: 70px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; color: #161616; ">@item3.Summary</a>
                            </div>
                        </div>
                        <div class="wp-btn-detail" style=" margin-top: 18px; display: flex; align-items: center; flex-wrap: wrap;">
                            <div class="btn-detail" style=" margin-right: 0; margin-bottom: 5px;">
                                <a style=" color: #363636; background: #ECECEC; font-size: 15px; line-height: 17px; padding:9px 13px; padding-bottom: 8px; display: inline-block; border-radius: 100px; transition: all 0.3s; ">Thư viện CP Seed</a>
                            </div>
                            <p class="btn-detail-time" style="margin-left:10px;    color: #6d6d6d;">@item3.CreateDate</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


