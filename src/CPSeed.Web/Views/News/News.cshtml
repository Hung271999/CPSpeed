@model IEnumerable<CPSeed.Models.NewDetail>
<div class="container">
    <div class="row my-4">
        <div class="col-12">
            <h2 class="noo-sh-title">Tin Tức</h2>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-4">
                <div class="blog-box">
                    <div class="blog-img">
                        <img class="img-fluid" src="~/images/@item.image" alt="">
                    </div>
                    <div class="blog-content">
                        <div class="title-blog">
                            <h3> <a href="./">@item.Title</a></h3>
                            <hr />
                            <p>@item.Summary</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (ViewBag.Status == 1)
        {
              <a href="@Url.Action("NewsDetail","News", new {id=1})" style="margin-left:400px">Xem thêm</a>

        }
    </div>
    <hr />
</div>