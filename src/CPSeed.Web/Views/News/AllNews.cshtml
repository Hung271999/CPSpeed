@model PagedList.IPagedList<CPSeed.Models.NewDetail>
@using PagedList.Mvc;
@using PagedList;
<style>
    .pagination {
        display: inline-block;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border: 1px solid #4CAF50;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

    .MenuTrang li {
        display: inline;
    }
</style>
<div class="container" style="margin-left:-210px; padding-top:50px; max-width:initial;" id="techonogy">
    <div class="row">
        <div class="col-lg-12">
            <div class="title-all text-center">
                <h2 class="noo-sh-title" style="color: #005b36;margin-left:-680px">Danh sách tin tức</h2>
            </div>
        </div>
    </div>
    <div class="row" style="margin-left:248px">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-6 col-xl-4">
                <div class="blog-img">
                    <img class="img-fluid" src="~/images/@item.image" alt="">
                </div>
                <div class="blog-content">
                    <div class="wp-content-news" style="margin-top:22px;">
                        <a href="" class="content-news-txt" style="font-family: fml-bold; font-size: 22px; line-height: 23px; transition: 0.3s; height: 70px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; color: #161616;line-height:35px">@item.Title</a>
                        <div class="wp-btn-detail" style=" margin-top: 18px; display: flex; align-items: center; flex-wrap: wrap;">
                            <div class="btn-detail" style=" margin-right: 0; margin-bottom: 5px;">
                                <a style=" color: #363636; background: #ECECEC; font-size: 15px; line-height: 17px; padding:9px 13px; padding-bottom: 8px; display: inline-block; border-radius: 100px; transition: all 0.3s; ">Tin CPSeed</a>
                            </div>
                            <p class="btn-detail-time" style="margin-left:10px">@item.CreateDate</p>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
    <div class="MenuTrang" style="text-align:center; padding-top:40px">
        @Html.PagedListPager(Model, page => Url.Action("AllNews", new { page = page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "techonogy" }))
    </div>
</div>
