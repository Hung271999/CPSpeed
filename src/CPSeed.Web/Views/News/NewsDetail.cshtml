@model IEnumerable<CPSeed.Models.NewDetail>
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="noo-sh-title">TRUYỀN THÔNG</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Truyền thông</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                <div class="row">
                                    <div class="container">
                                        <div class="row my-4">
                                            <div class="col-12">
                                                <h2 class="noo-sh-title">@ViewBag.Title</h2>
                                            </div>
                                            @foreach (var item in Model)
                                            {
                                                <div class="col-md-6 col-lg-4 col-xl-4">
                                                    <div class="blog-box">
                                                        <div class="blog-img">
                                                            <img class="img-fluid" src="~/images/@item.image" alt="">
                                                        </div>
                                                        <div class="blog-content">
                                                            <div class="title-blog">
                                                                <h3 style="text-align:center">@item.Title</h3>
                                                                <p>@item.Summary</p>
                                                            </div>
                                                            <ul class="option-blog">
                                                                <li><a href="#"><i class="far fa-heart"></i></a></li>
                                                                <li><a href="#"><i class="fas fa-eye"></i></a></li>
                                                                <li><a href="#"><i class="far fa-comments"></i></a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        @if (ViewBag.Status == 1)
                                        {
                                            <a href="">Xem thêm</a>
                                        }
                                        <hr />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left" style="padding-top:110px">
                <div class="product-categori">
                    <div class="search-product">
                        <form action="#">
                            <input class="form-control" placeholder="Search here..." type="text">
                            <button type="submit"> <i class="fa fa-search"></i> </button>
                        </form>
                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3> Truyền thông</h3>
                        </div>
                        @Html.Action("Communicationcategory", "News")
                    </div>
                </div>
            </div>

        </div>
    </div>
    @Html.Action("AllNews", "News", new { id= 1})
</div>
