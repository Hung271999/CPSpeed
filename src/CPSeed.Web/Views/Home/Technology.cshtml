@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<CPSeed.Models.Post>

<div class="container">
    <div class="row">
        <!-- Start Blog  -->
        <div class="about-box-main">
            <div class="container">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="banner-frame">
                                <img class="img-fluid" src="~/images/Post/@item.image" alt="" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h2 class="noo-sh-title-top">@item.Title <span>Freshshop</span></h2>
                            <p>
                                @item.contents
                            </p>
                        </div>
                    </div>


                }
            </div>
        </div>
        <!-- End Blog  -->
    </div>
</div>
<div style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("index", new { page=page }))
</div>