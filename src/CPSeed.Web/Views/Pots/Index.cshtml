@model IEnumerable<CPSeed.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="about-box-main">
    <div class="container">
        <div class="row my-4">
            <div class="col-12">
                <h2 class="noo-sh-title">Thông tin tuyển dụng</h2>
                <hr />
            </div>
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-3">
                    <div class="hover-team">
                        <div class="our-team">
                            <img src="~/images/Post/@item.image" alt="">
                        </div>
                        <div class="team-description" style="text-align:center">
                            <b>@item.Title</b>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Start Shop Page  -->
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-item-filter row">
                        <div class="col-12 col-sm-8 text-center text-sm-left">
                            <div class="toolbar-sorter-right">
                                <span>Sort by </span>
                                <select id="basic" class="selectpicker show-tick form-control" data-placeholder="$ USD">
                                    <option data-display="Select">Nothing</option>
                                    <option value="hr">Giáo ca → Gía thấp</option>
                                    <option value="3">Giá thấp → Giá cao</option>
                                    <option value="4">Bán chạy nhất</option>
                                </select>
                            </div>
                            <p> Đã tìm thấy @ViewBag.Count sản phẩm</p>
                        </div>
                    </div>
                    <div class="product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="list-view">
                                <div class="list-view-box">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categori">
                    <div class="search-product">
                        <form action="#">
                            <input class="form-control" placeholder="Search here..." type="text">
                            <button type="submit"> <i class="fa fa-search"></i> </button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>