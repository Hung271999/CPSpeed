@model IEnumerable<CPSeed.Models.Post>
@using CPSeed.Util;
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@Html.Action("Banner", "Home", new { image = "tuyeudung.jpg", title = "Tuyển dụng" })
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categori ">
                    <div class="filter-sidebar-left menu-right">
                        <div class="title-left">
                            <h2 class="noo-sh-title" style="">Tuyển dụng</h2>
                        </div>
                        @Html.Action("categoryPost", "Pots")
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <h2 class="noo-sh-title">TUYỂN DỤNG</h2>
                <p>Ứng viên có thể nộp hồ sơ theo một trong các hình thức sau: </p>
                <p style="font-weight:100">1. Nộp hồ sơ trực tiếp hoặc gửi qua đường bưu điện đến Phòng Nhân sự Tập đoàn. Hoặc tại đơn vị có vị trí tuyển dụng.&nbsp;</p>
                <p style="font-weight:100">2. Gửi hồ sơ qua Email: tuyendung.Cpseed@gmail.com&nbsp;</p>
                <p style="font-weight:100">3. Nộp trực tuyến theo form bên dưới.&nbsp;</p>
                <br />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="list-form-page" style=" background:none">
                    <div class="form-input-contact" style="">
                        <div class="row">
                            <div class="col-12 col-md-3 col-lg-3 " style="">
                                <div class="item-input-contact">
                                    <input type="text" id="keyword" placeholder="Họ và tên..." style="background: rgba(193, 195, 184, 0.25);">
                                </div>
                            </div>
                            <div class="col-12 col-md-3 col-lg-3 ">
                                <div class="item-input-contact">
                                    <input type="text" id="keyword" placeholder="Số điện thoại..." style="background: rgba(193, 195, 184, 0.25);">
                                </div>
                            </div>
                            <div class="col-12 col-md-3 col-lg-3 ">
                                <div class="item-input-contact">
                                    <input type="text" id="keyword" placeholder="Email..." style="background: rgba(193, 195, 184, 0.25);">
                                </div>
                            </div>
                            <div class="col-12 col-md-3 col-lg-3">
                                <div class="item-input-contact">
                                    <select name="" id="Career" style="background: rgba(193, 195, 184, 0.25);">
                                        <option value="0" selected="">Tất cả</option>

                                        <option value="180">Cán bộ quản lý</option>

                                        <option value="181">Kinh doanh, Marketing</option>

                                        <option value="182">Kế toán, Kiểm toán</option>

                                        <option value="183">Nhân sự hành chính</option>

                                        <option value="184">Kỹ thuật sản xuất</option>

                                        <option value="199">Cơ khí, CBBQ</option>

                                        <option value="200">Khác</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="col-12 col-md-9 col-lg-12">
                    <textarea type="text" id="keyword" name="tex" style="background: rgba(193, 195, 184, 0.25); width:100%; height:143px"></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-12 col-md-12 col-lg-offset-0">
                    <br />
                    <span class="txt-download-file-ut">  <i class="fas fa-download"></i> Tải mẫu đơn ứng tuyển</span>
                    <br />
                    <br />
                    <div class=" main-download-ut">
                        <p style="text-align:center; padding-top:50px">Tải lên hồ sơ ứng tuyển</p>
                            <input type="file" id="input-file-now-custom-2" class="file-upload"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('tex');

</script>


