@model CPSeed.Models.News

@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("EditNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Edit News Category</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                News ID
                            </label>
                            <input style="color:black"
                                   value="@Model.NewsID"
                                   name="NewsID"
                                   type="text"
                                   class="form-control validate"
                                   required
                                   readonly />
                            @ViewData["Loi1"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Title
                            </label>
                            <input name="TitleNews"
                                   value="@Model.Title"
                                   type="text"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi2"]
                        </div>
                        <select id="UserId" name="Priority" class="custom-select tm-select-accounts">
                            @if (Model.Status == true)
                            {
                                <option value="true" selected>Kích Hoạt</option>
                                <option value="false">K Kích Hoạt</option>
                            }
                            else
                            {
                                <option value="true" >Kích Hoạt</option>
                                <option value="false" selected>K Kích Hoạt</option>
                            }

                        </select>

                    </div>
                    <div style="padding-top:20px; padding-left:25px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit News Category Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}