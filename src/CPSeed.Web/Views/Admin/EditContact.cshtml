@model CPSeed.Models.Contact

@{
    ViewBag.Title = "EditContact";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("EditContact", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Sửa thông tin liên hệ</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Contact ID
                            </label>
                            <input style="color:black"
                                   name="ContactID"
                                   type="text"
                                   value="@Model.ContactID"
                                   class="form-control validate"
                                   readonly
                                   required />
                            @ViewData["Loi1"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Title
                            </label>
                            <input name="TitleContact"
                                   type="text"
                                   value="@Model.Title"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi2"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Icon
                            </label>
                            <input name="Icon"
                                   type="text"
                                   value="@Model.icons"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi3"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Url
                            </label>
                            <input name="Url"
                                   type="text"
                                   value="@Model.url"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi4"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Content
                            </label>
                            <textarea name="Content" id="description">@Model.contents</textarea>
                            @ViewData["Loi5"]
                        </div>

                    </div>
                    <div padding-left:35px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Sửa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}