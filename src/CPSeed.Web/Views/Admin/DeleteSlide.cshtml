@model CPSeed.Models.Slide

@{
    ViewBag.Title = "DeleteSlide";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("DeleteSlide", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Thêm slide banner</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">

                        <div class="col-xl-8 col-lg-8 col-md-8">
                            <label for="name">
                                Hình ảnh
                            </label>
                            <input type="text" value="~/images/banner/@Model.image" name="picture" id="picture" class="form-control" readonly style="color:black" />
                            <img style="margin-left:-5px" src="@Url.Content("~/images/banner/" + Model.image)" id="pictureUpload" class="col-xl-12 col-lg-12 col-md-12" />
                        </div>

                        <div class="col-xl-4 col-lg-4 col-md-4">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Đính kèm link
                                    </label>
                                    <input name="Url"
                                           type="text"
                                           value="@Model.url"
                                           class="form-control validate"
                                           readonly
                                           required />
                                    @ViewData["Loi2"]
                                </div>                             

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Trạng thái
                                    </label>
                                    @if (Model.Status == true)
                                    {
                                        <textarea name="Status"
                                                  type="text"
                                                  class="form-control validate"
                                                  readonly
                                                  required>Hiển thị</textarea>
                                    }
                                    else
                                    {
                                        <textarea name="Status"
                                                  type="text"
                                                  class="form-control validate"
                                                  readonly
                                                  required>Không hiển thị</textarea>
                                    }
                                </div>

                            </form>
                        </div>

                    </div>
                    <div class="col-12" style="margin-top:30px">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

