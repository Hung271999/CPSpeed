@model CPSeed.Models.Slide

@{
    ViewBag.Title = "DeleteSlide";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("DeleteSlide", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Delete Slide</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Slide ID
                                    </label>
                                    <input style="color:black"
                                           name="SlideID"
                                           type="text"
                                           value="@Model.SlideID"
                                           class="form-control validate"
                                           readonly
                                           required />

                                </div>
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Url
                                    </label>
                                    <input style="color:black"
                                           name="Url"
                                           type="text"
                                           value="@Model.url"
                                           class="form-control validate"
                                           readonly
                                           required />

                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Content
                                    </label>
                                    <textarea id="Content" name="description" readonly>@Model.contents</textarea>

                                </div>

                            </form>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                            <div style="padding-top:18px" class="custom-file mt-3 mb-3">
                                <input type="text" value="@Model.image" name="picture" id="picture" class="form-control" readonly style="color:black" />
                                <img src="@Url.Content("~/images/banner/" + Model.image)" id="pictureUpload" width="358" height="350" />
                            </div>
                        </div>
                    </div>

                    <div style="padding-top:200px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Delete Slide Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

