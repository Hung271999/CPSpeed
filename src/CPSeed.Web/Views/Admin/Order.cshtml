@model IEnumerable<CPSeed.Models.OrderDetail>
@using CPSeed.Models;
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container">
    <!-- row -->
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                <h2 class="tm-block-title">Chi Tiết Đơn Hàng</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã Đơn</th>
                            <th scope="col">Sản Phẩm</th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Tổng Tiền</th>
                            <th scope="col">Ngày Mua</th>
                            <th scope="col">Người Đặt</th>
                            <th scope="col">Địa Chỉ</th>
                            <th scope="col">&nbsp;</th>
                            <th scope="col">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th scope="row"><b>#@item.OrderID</b></th>
                            @{
                                CPSeedContext data = new CPSeedContext();
                                var a = data.Products.Where(n => n.ProductID == item.ProductID).SingleOrDefault();
                                var b = data.Orders.Where(n => n.OrderID == item.OrderID).SingleOrDefault();

                            }
                            <td><b>@a.ProductName</b></td>
                            <td><b>@item.Quantity</b></td>
                            <td><b>@item.SellPrice</b></td>
                            <td><b> @String.Format("{0:M/d/yyyy}", b.CreateDate)</b></td>
                            <td><b>@b.CreateUser</b></td>
                            <td><b>@b.Address</b></td>
                            <td>
                                <a href="@Url.Action("DeleteOrder", "Admin" , new { id = item.OrderDetailID })" class="tm-product-delete-link">
                                    <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                </a>
                            </td>
                           @* <td>
                                <a href="@Url.Action("EditOrder", "Admin" , new { id = item.OrderDetailID })">
                                    <span style="color:white">Sửa</span>
                                </a>
                            </td>*@
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
