</nav>
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Orders</h2>
                <div style="max-height: 590px;" class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">PRODUCT</th>
                                <th scope="col">QUANTITY</th>
                                <th scope="col">SELL PRICE</th>
                                <th scope="col">STATUS</th>
                                <th scope="col">PAID</th>
                                <th scope="col">CREATE DATE</th>
                                <th scope="col">RECEIVED DATE</th>
                                <th scope="col">EMAIL</th>
                                <th scope="col">ADDRESS</th>
                                <th scope="col">PHONE</th>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                           @foreach (var item in Model)
                           {
                               CPSeedContext data = new CPSeedContext();
                               var order = data.Orders.Where(n => n.OrderID == item.OrderID).Single();
                               var product = data.Products.Where(n => n.ProductID == item.ProductID).Single();
                               ViewBag.order = order;
                               ViewBag.product = product;
                               int sp = Decimal.ToInt32((decimal)item.SellPrice);
                               ViewBag.SellPrice = sp;

                            <tr>
                                <td><p>@ViewBag.product.ProductName</p></td>
                                <td><p>@item.Quantity</p></td>
                                <td><p>@ViewBag.SellPrice</p></td>
                                <td><p>@ViewBag.order.Status</p></td>
                                <td><p>@ViewBag.order.Paid</p></td>
                                <td><p>@ViewBag.order.CreateDate</p></td>
                                <td><p>@ViewBag.order.ReceivedDate</p></td>
                                <td><p style="max-width:100px; word-wrap: break-word;">@ViewBag.order.Email</p></td>
                                <td><p style="max-width:100px; word-wrap: break-word;">@ViewBag.order.Address</p></td>
                                <td><p style="max-width:100px; word-wrap: break-word;">@ViewBag.order.Phone</p></td>
                                <td>
                                    <a href="@Url.Action("DeleteOrder", "Admin" , new { id = item.OrderDetailID })" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("EditOrder", "Admin" , new { id = item.OrderDetailID })">
                                        <span style="color:white">Edit</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>

