@model CPSeed.Models.Contact

@{
    ViewBag.Title = "AddContact";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Thêm Liên Hệ</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                               Tiêu Đề
                            </label>
                            <input name="TitleContact"
                                   type="text"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi2"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                               Hình Icon
                            </label>
                            <input name="Icon"
                                   type="text"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi3"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                              Đường Link
                            </label>
                            <input name="Url"
                                   type="text"
                                   class="form-control validate"
                                   required />
                            @ViewData["Loi4"]
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                               Nội Dung
                            </label>
                            <textarea name="Content" id="description"></textarea>
                            @ViewData["Loi5"]
                        </div>

                    </div>
                    <div padding-left:35px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}