    <div class="container h-100">
        <a class="navbar-brand" href="index">
            <h1 class="tm-site-title mb-0">Product Admin</h1>
        </a>
        <button class="navbar-toggler ml-auto mr-0"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars tm-nav-icon"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto h-100">
                
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-file-alt"></i> Report
                        <span class="sr-only">(current)</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="Product">
                        <i class="fas fa-shopping-cart"></i> Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="Post">
                        <i class="fas fa-file-alt"></i> Post
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Slide">
                        <i class="fas fa-file-alt"></i> Slide
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Contactus">
                        <i class="fas fa-file-alt"></i> Contact
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="NewsDetail">
                        <i class="fas fa-file-alt"></i> News
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Order">
                        <i class="fas fa-file-alt"></i> Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Account">
                        <i class="far fa-user"></i> Account
                    </a>
                </li>



            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link d-block" href="Login">
                        Admin, <b>Logout</b>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Posts</h2>
                <div style="max-height: 525px;" class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">TITLE</th>
                                <th scope="col">SUMMARY</th>
                                <th scope="col">CONTENT</th>
                                <th scope="col">CATE</th>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                {
                                    CPSeedContext data = new CPSeedContext();
                                    var category = data.Categories.Where(n => n.CategoryID == item.CategoryID).Single();
                                    ViewBag.category = category;
                                }
                                <tr>
                                    <td style="max-width:100px"><p>@Html.Raw(item.Title)</p></td>
                                    <td><p style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; line-height: 20px; -webkit-line-clamp: 5; display: -webkit-box; -webkit-box-orient: vertical;">@Html.Raw(item.Summary)</p></td>
                                    <td><p style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; line-height: 20px; -webkit-line-clamp: 5; display: -webkit-box; -webkit-box-orient: vertical;">@Html.Raw(item.contents)</p></td>
                                    <td>
                                        <p>@ViewBag.category.Title</p>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DeletePost", "Admin" , new { id = item.PostID })" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditPost", "Admin" , new { id = item.PostID })">
                                            <span style="color:white">Edit</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="AddPost"
                   class="btn btn-primary btn-block text-uppercase mb-3">Add new post</a>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
            <div style="max-height: none;" class="tm-bg-primary-dark tm-block tm-block-product-categories">
                <h2 class="tm-block-title">Post Categories</h2>
                <div style="max-height: 525px;" class="tm-product-table-container">
                    <table class="table tm-table-small tm-product-table">
                        @Html.Action("Category", "Admin")
                    </table>
                </div>
                <a style="margin-bottom: 0rem!important;" href="AddCategory"
                   class="btn btn-primary btn-block text-uppercase mb-3">ADD NEW CATEGORY</a>

            </div>
        </div>
    </div>
</div>
