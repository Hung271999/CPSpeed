@model CPSeed.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<nav class="navbar navbar-expand-xl">
    <div class="container h-100">
        <a class="navbar-brand" href="index">
            <h1 class="tm-site-title mb-0">Product Admin</h1>
        </a>
        <button class="navbar-toggler ml-auto mr-0"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars tm-nav-icon"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto h-100">
                <li class="nav-item">
                    <a class="nav-link" href="Index">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-file-alt"></i> Report
                        <span class="sr-only">(current)</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" href="Product">
                        <i class="fas fa-shopping-cart"></i> Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Post">
                        <i class="fas fa-file-alt"></i> Post
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Slide">
                        <i class="fas fa-file-alt"></i> Slide
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="Account">
                        <i class="far fa-user"></i> Account
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-cog"></i> Setting
                    </a>
                </li>

            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link d-block" href="Login">
                        Admin, <b>Logout</b>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Delete Product</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product ID
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@Model.ProductID"
                                           class="form-control validate"
                                           readonly                                          
                                           required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product Name
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@Model.ProductName"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product Types
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@ViewBag.ProductType"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Buy Price
                                    </label>
                                    <input style="color:black"                                           
                                           type="text"
                                           value="@ViewBag.BuyPrice"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Sell Price
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@ViewBag.SellPrice"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>
                            </form>
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                            <div style="padding-top:18px" class="custom-file mt-3 mb-3">                                                                
                                <img src="@Url.Content("~/images/Product/" + Model.image)" id="pictureUpload" width="358" height="350" />
                            </div>
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" readonly>@Model.description</textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Delete Product</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


