@model IEnumerable<CPSeed.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-white mt-5 mb-5">Xin Chào <b>Admin</b></p>
        </div>
    </div>
    <!-- row -->
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                <h2 class="tm-block-title">Đơn Hàng</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã Đơn</th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Tổng Tiền</th>
                            <th scope="col">Ngày Mua</th>
                            <th scope="col">Tình Trạng</th>
                            <th scope="col">Người Đặt</th>
                            <th scope="col">Địa chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th scope="row"><b>#@item.OrderID</b></th>

                            <td><b>@item.Priority</b></td>
                            <td><b>@item.Total</b></td>
                            <td>@String.Format("{0:M/d/yyyy}", item.CreateDate)</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <div class="tm-status-circle moving">
                                    </div>
                                }
                                else
                                {
                                    <div class="tm-status-circle pending">
                                    </div>
                                }
                            </td>

                            <td>@item.CreateUser</td>
                            <td>@item.Address</td>
                            <td>
                                <a href="@Url.Action("Order", "Admin" , new { id = item.OrderID })" class="tm-product-delete-link">
                                    Xem
                                </a>
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

