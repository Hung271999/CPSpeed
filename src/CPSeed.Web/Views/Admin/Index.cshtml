@model IEnumerable<CPSeed.Models.Order>
@using CPSeed.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <!-- row -->
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark primary-win">
                <h2 class="tm-block-title">Đơn Hàng</h2>
                <table class="table table-hover tm-table-small tm-product-table primary-content-win">
                    <thead>
                        <tr>
                            <th scope="col">Mã Đơn</th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Tổng Tiền</th>
                            <th scope="col">Ngày Mua</th>
                            <th scope="col">Giao hàng</th>
                            <th scope="col">Thanh toán</th>
                            <th scope="col">Người Đặt</th>
                            <th scope="col">&nbsp;</th>
                            <th scope="col">&nbsp;</th>
                        </tr>
                    </thead>    
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><b>#@item.OrderID</b></td>
                            <td><b>@item.Priority</b></td>
                            <td><b>@item.Total</b></td>
                            <td><b>@String.Format("{0:d/M/yyyy}", item.CreateDate)</b></td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <img src="~/images/icons/1200px-Light_green_check.svg.png" width="15px" />
                                }
                                else
                                {
                                    <img src="~/images/icons/1200px-Red_x.svg.png" width="15px" />
                                }
                            </td>

                            <td>
                                @if (item.Paid == true)
                                {
                                    <img src="~/images/icons/1200px-Light_green_check.svg.png" width="15px" />
                                }
                                else
                                {
                                    <img src="~/images/icons/1200px-Red_x.svg.png" width="15px" />
                                }
                            </td>

                            <td><b>@item.CreateUser</b></td>
                            <td>
                                <a href="@Url.Action("Order", "Admin" , new { id = item.OrderID })">
                                    <img src="~/images/icons/eye.png" width="20px" />
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("EditOrder", "Admin" , new { id = item.OrderID })">
                                    <img src="~/images/icons/pencil-square.svg" width="20px" />
                                </a>
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


