

@model IEnumerable<CPSeed.Models.Slide>

@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<nav class="navbar navbar-expand-xl">
    <div class="container h-100">
        <a class="navbar-brand" href="index">
            <h1 class="tm-site-title mb-0">Product Admin</h1>
        </a>
        <button class="navbar-toggler ml-auto mr-0"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars tm-nav-icon"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto h-100">
                
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-file-alt"></i> Report
                        <span class="sr-only">(current)</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="Product">
                        <i class="fas fa-shopping-cart"></i> Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Post">
                        <i class="fas fa-file-alt"></i> Post
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="slide">
                        <i class="fas fa-file-alt"></i> Slide
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Contactus">
                        <i class="fas fa-file-alt"></i> Contact
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="NewsDetail">
                        <i class="fas fa-file-alt"></i> News
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="Order">
                        <i class="fas fa-file-alt"></i> Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Account">
                        <i class="far fa-user"></i> Account
                    </a>
                </li>



            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link d-block" href="Login">
                        Admin, <b>Logout</b>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Slides</h2>
                <div style="max-height: 595px;" class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">Content</th>
                                <th scope="col">Url</th>
                                <th scope="col">Image</th>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><p style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; line-height: 20px; -webkit-line-clamp: 5; display: -webkit-box; -webkit-box-orient: vertical;">@Html.Raw(item.contents)</p></td>
                                <td><p style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; line-height: 20px; -webkit-line-clamp: 5; display: -webkit-box; -webkit-box-orient: vertical;">@Html.Raw(item.url)</p></td>

                                <td><img src="@Url.Content("~/images/banner/" + item.image)" width="300" /></td>

                                <td>
                                    <a href="@Url.Action("DeleteSlide", "Admin" , new { id = item.SlideID })" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("EditSlide", "Admin" , new { id = item.SlideID })">
                                        <span style="color:white">Edit</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="AddSlide"
                   class="btn btn-primary btn-block text-uppercase mb-3">Add new slide</a>
            </div>
        </div>
    </div>
</div>

