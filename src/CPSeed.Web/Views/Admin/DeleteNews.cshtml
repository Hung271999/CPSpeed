@model CPSeed.Models.News

@{
    ViewBag.Title = "DeleteNews";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("DeleteNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Delete News Category</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                News ID
                            </label>
                            <input style="color:black"
                                   value="@Model.NewsID"
                                   name="NewsID"
                                   type="text"
                                   class="form-control validate"
                                   required
                                   readonly />
                            
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                            <label for="name">
                                Title
                            </label>
                            <input style="color:black"
                                   name="TitleNews"
                                   value="@Model.Title"
                                   type="text"
                                   class="form-control validate"
                                   required
                                   readonly/>
                           
                        </div>

                    </div>
                    <div style="padding-top:20px; padding-left:25px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Delete News Category Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}