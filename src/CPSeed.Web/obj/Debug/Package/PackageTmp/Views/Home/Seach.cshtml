
@if (ViewBag.Status == 2)
{
    <script>
        alert('Nội dung cần tìm không tồn tại');
        self.location = window.location.href;
    </script>
}
else
{
    if (ViewBag.Status == 1)
    {
        @Html.Action("Banner", "Home", new { image = "2.jpg", title = "Truyền Thông" })
        <div class="shop-box-inner">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                        <div class="right-product-box">
                            <div class="product-categorie-box">
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                        <div class="row">
                                            <div class="container" id="techonogy">
                                                <div class="row my-4">
                                                    <div class="col-12">
                                                        <h2 class="noo-sh-title">Danh sách tin</h2>
                                                    </div>
                                                    @foreach (var item in Model)
                                                    {
                                                        <div class="col-md-6 col-lg-4 col-xl-4">
                                                            <div class="blog-box">
                                                                <div class="blog-img">
                                                                    <img class="img-fluid" src="~/images/@item.image" alt="">
                                                                </div>
                                                                <div class="blog-content">
                                                                    <div class="title-blog">
                                                                        <h3 style="text-align:center">@item.Title</h3>
                                                                        <p>@item.Summary</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left" style="padding-top:110px">
                        <div class="product-categori">
                            <div class="search-product">
                                <form action="#">
                                    <input class="form-control" placeholder="Search here..." type="text">
                                    <button type="submit"> <i class="fa fa-search"></i> </button>
                                </form>
                            </div>
                            <div class="filter-sidebar-left">
                                <div class="title-left">
                                    <h3> Truyền thông</h3>
                                </div>
                                @Html.Action("Communicationcategory", "News")
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <script>
        alert("Đã tìm thấy @Model.Count tin");
        </script>
    }
    else
    {
        <!-- Start All Title Box -->
        @Html.Action("Banner", "Home", new { image = "1.jpg", title = "Sản Phẩm" })
        <!-- End All Title Box -->
        <!-- Start Shop Page  -->
        <div class="shop-box-inner">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                        <div class="right-product-box">
                            <div class="product-item-filter row">
                                <div class="col-12 col-sm-8 text-center text-sm-left">
                                    <div class="toolbar-sorter-right">
                                        <span>Sort by </span>
                                        <select id="basic" class="selectpicker show-tick form-control" data-placeholder="$ USD" onchange="basic();">
                                            <option value="3" data-display="Select">Giáo cao → Gía thấp</option>
                                            <option value="2">Giá thấp → Giá cao</option>
                                        </select>
                                    </div>
                                    <p> Đã tìm thấy @Model.Count  sản phẩm</p>
                                </div>
                                <div class="col-12 col-sm-4 text-center text-sm-right">
                                </div>
                            </div>
                            <div class="product-categorie-box" id="multiple">
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                        <div class="row">
                                            @foreach (var item in Model)
                                            {
                                                <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                                    <div class="products-single fix">
                                                        <div class="box-img-hover">
                                                            <div class="type-lb">
                                                                @{
                                                                    DateTime a = Convert.ToDateTime(item.CreateDate);
                                                                    DateTime b = Convert.ToDateTime(DateTime.Now);
                                                                    TimeSpan Time = b - a;
                                                                    int TongSoNgay = Time.Days;
                                                                }
                                                                @if (TongSoNgay < 20)
                                                                {
                                                                    <p class="new">New</p>
                                                                }

                                                            </div>
                                                            <img src="~/images/Product/@item.image" class="img-fluid" alt="Image">
                                                            <div class="mask-icon">
                                                                <ul>
                                                                    <li><a href="@Url.Action("productDetail", "ProDuct", new { id = item.ProductID})" data-toggle="tooltip" data-placement="right" title="Xem ngay"><i class="fas fa-eye"></i></a></li>
                                                                </ul>
                                                                <a class="cart" href="#">Thêm vào giỏ hàng</a>
                                                            </div>
                                                        </div>
                                                        <div class="why-text">
                                                            <h4>@item.ProductName</h4>
                                                            <h5>@item.BuyPriceCurrent</h5>

                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                        <div class="product-categori">
                            <div class="search-product">
                                <form action="#">
                                    <input class="form-control" placeholder="Search here..." type="text">
                                    <button type="submit"> <i class="fa fa-search"></i> </button>
                                </form>
                            </div>
                            <div class="filter-sidebar-left">
                                <div class="title-left">
                                    <h3>Danh sục sản phẩm</h3>
                                </div>
                                @Html.Action("ProductType", "Product")
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- End Shop Page -->

    }
}

