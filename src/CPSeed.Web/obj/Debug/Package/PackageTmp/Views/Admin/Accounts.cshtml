@using Microsoft.AspNet.Identity;
@using CPSeed.Models;
@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <!-- row -->
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark primary-win">
                <h2 class="tm-block-title">Người dùng</h2>
                <table class="table table-hover tm-table-small tm-product-table primary-content-win">
                    <thead>
                        <tr>
                            <th scope="col">Người dùng</th>
                            <th scope="col">Quyền</th>
                       
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                           
                            <th scope="row"><b>@item.UserName</b></th>

                            @{ var context = new ApplicationDbContext();
                                string a = item.Id;
                                var role = context.Roles.Where(n => n.Id == a).FirstOrDefault();
                            }
                            @if (role != null)
                            {
                                <th scope="row"><b>@role.Name</b></th>
                            }
                            else
                            {
                                <th scope="row"><b>User</b></th>
                            }
                          
                        </tr>
                                 
                    }


                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>

