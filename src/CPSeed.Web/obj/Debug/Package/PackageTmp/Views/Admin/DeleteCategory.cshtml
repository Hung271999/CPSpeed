@model CPSeed.Models.Category

@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Delete Post</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-12 col-lg-12 col-md-12">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Category ID
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@Model.CategoryID"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>
                                <input style="color:black"
                                       type="text"
                                       value="@Model.Title"
                                       class="form-control validate"
                                       readonly
                                       required />
                            </form>
                        </div>                        

                        <div style="padding-top:30px" class="col-12">
                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Delete Category</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
