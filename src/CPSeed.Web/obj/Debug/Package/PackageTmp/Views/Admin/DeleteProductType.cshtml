@model CPSeed.Models.ProductType

@{
    ViewBag.Title = "DeleteProductType";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("DeleteProductType", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Delete Product Type</h2>
                        </div>
                    </div>
                    <div style="padding-left:20px" class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product Type ID
                                    </label>
                                    <input style="color:black"
                                           name="ProductTypeID"
                                           type="text"
                                           value="@Model.ProductTypeID"
                                           class="form-control validate"
                                           readonly
                                           required />

                                </div>
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product Type Name
                                    </label>
                                    <input style="color:black"
                                           name="ProductTypeName"
                                           type="text"
                                           value="@Model.ProductTypeName"
                                           class="form-control validate"
                                           readonly
                                           required />

                                </div>

                                @*<div class="form-group mb-3">
                                    <label for="name">
                                        Tex Percent
                                    </label>
                                    <input style="color:black"
                                           name="TaxPercent"
                                           type="text"
                                           value="@Model.TaxPercent"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>*@

                            </form>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                            <div style="padding-top:18px" class="custom-file mt-3 mb-3">
                                <input type="text" value="@Model.image" name="picture" id="picture" class="form-control"  readonly style="color:black"/>
                                <img src="@Url.Content("~/images/producttype/" + Model.image)" id="pictureUpload" width="358" height="350" />
                            </div>
                        </div>
                    </div>

                    <div style="padding-top:200px" class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Delete Product Type Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}