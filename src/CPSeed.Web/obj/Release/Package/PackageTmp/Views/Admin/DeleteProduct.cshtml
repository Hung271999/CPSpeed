@model CPSeed.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    

    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Xóa sản phẩm</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-8 col-lg-8 col-md-8">
                            <form action="" class="tm-edit-product-form">

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Mã sản phẩm
                                    </label>
                                    <input placeholder=""
                                           name="ProductID"
                                           type="text"
                                           value="@Model.ProductID"
                                           class="form-control validate"
                                           readonly
                                           required />
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Tên sản phẩm
                                    </label>
                                    <input name="ProductName"
                                           type="text"
                                           value="@Model.ProductName"
                                           class="form-control validate"
                                           readonly
                                           required />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Danh mục sản phẩm
                                    </label>
                                    <input style="color:black"
                                           type="text"
                                           value="@ViewBag.ProductType"
                                           class="form-control validate"
                                           readonly
                                           required />
                                    
                                </div>


                                <div class="form-group mb-3">
                                    <label for="name">
                                        Giá mua
                                    </label>
                                    <input name="BuyPriceCurrent"
                                           type="text"
                                           value="@ViewBag.BuyPrice"
                                           class="form-control validate"
                                           readonly
                                           required />
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Giá bán
                                    </label>
                                    <input name="SellPrice"
                                           type="text"
                                           value="@ViewBag.SellPrice"
                                           class="form-control validate"
                                           readonly
                                           required />
                                    
                                </div>


                            </form>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4">
                            <label for="name">
                                Hình ảnh
                            </label>
                            <input type="text" value="@Model.image" name="picture" id="picture" class="form-control" readonly style="color:black" />
                            <img src="@Url.Content("~/images/Product/" + Model.image)" id="pictureUpload" class="col-xl-12 col-lg-12 col-md-12" />
                        </div>
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-12">
                        <label for="description">Mô tả </label>
                        <textarea name="description" id="description" readonly>@Model.description</textarea>                       
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


