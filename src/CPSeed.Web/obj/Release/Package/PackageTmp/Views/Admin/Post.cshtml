@model IEnumerable<CPSeed.Models.Post>
@using CPSeed.Models;
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Bài Viết</h2>
                <div style="max-height: 525px;" class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Danh mục</th>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                {
                                    CPSeedContext data = new CPSeedContext();
                                    var category = data.Categories.Where(n => n.CategoryID == item.CategoryID).Single();
                                    ViewBag.category = category;
                                }
                                <tr>
                                    <td ><p>@Html.Raw(item.Title)</p></td>
                                    <td>
                                        <p>@ViewBag.category.Title</p>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DeletePost", "Admin" , new { id = item.PostID })" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditPost", "Admin" , new { id = item.PostID })">
                                            Sửa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="AddPost"
                   class="btn btn-primary btn-block text-uppercase mb-3">Thêm Bài Viết</a>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
            <div style="max-height: none;" class="tm-bg-primary-dark tm-block tm-block-product-categories">
                <h2 class="tm-block-title">Danh Mục Bài Viết</h2>
                <div style="max-height: 525px;" class="tm-product-table-container">
                    <table class="table tm-table-small tm-product-table">
                        @Html.Action("Category", "Admin")
                    </table>
                </div>
                <a style="margin-bottom: 0rem!important;" href="AddCategory"
                   class="btn btn-primary btn-block text-uppercase mb-3">Thêm Danh mục</a>

            </div>
        </div>
    </div>
</div>
