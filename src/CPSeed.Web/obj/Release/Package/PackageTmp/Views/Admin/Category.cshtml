@model IEnumerable<CPSeed.Models.Category>

@{
    Layout = null;
}

<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td class="tm-product-name">@Html.DisplayFor(modelItem => item.Title)</td>
            <td>
                <a href="@Url.Action("DeleteCategory", "Admin" , new { id = item.CategoryID })" class="tm-product-delete-link">
                    <i class="far fa-trash-alt tm-product-delete-icon"></i>
                </a>
            </td>
            <td>
                <a href="@Url.Action("EditCategory", "Admin" , new { id = item.CategoryID })">
                    Sửa
                </a>
            </td>

        </tr>
    }
</tbody>