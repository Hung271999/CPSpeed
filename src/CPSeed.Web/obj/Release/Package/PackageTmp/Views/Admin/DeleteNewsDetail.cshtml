@model CPSeed.Models.NewDetail
@using CPSeed.Models;
@{
    ViewBag.Title = "DeleteNewsDetail";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("DeleteNewsDetail", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Thêm Tin Tức</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-8 col-lg-8 col-md-8">
                            <form action="" class="tm-edit-product-form">
                                <div class="form-group mb-3">
                                    <label for="name">
                                        Tiêu Đề
                                    </label>
                                    <textarea name="Title"
                                              type="text"
                                              class="form-control validate"
                                              readonly
                                              required>@Model.Title</textarea>
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Mô Tả
                                    </label>
                                    <textarea name="Summary"
                                              type="text"
                                              class="form-control validate"
                                              readonly
                                              required>@Model.Summary</textarea>
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Danh Mục Tin Tức
                                    </label>
                                    <textarea name="Summary"
                                              type="text"
                                              class="form-control validate"
                                              readonly
                                              required>@ViewBag.News</textarea>                                    
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Tình trạng
                                    </label>
                                    @if (Model.Priority == 1)
                                    {
                                        <textarea name="Priority"
                                                  type="text"
                                                  class="form-control validate"
                                                  readonly
                                                  required>Ưu Tiên</textarea>
                                    }
                                    else
                                    {
                                        <textarea name="Priority"
                                                  type="text"
                                                  class="form-control validate"
                                                  readonly
                                                  required>Thường</textarea>
                                    }
                                </div>

                            </form>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4">
                            <label for="name">
                                Hình ảnh
                            </label>
                            <input type="text" value="~/images/News/@Model.image" name="picture" id="picture" class="form-control" readonly style="color:black" />
                            
                            <img style="margin-left:-5px" src="@Url.Content("~/images/News/" + Model.image)" id="pictureUpload" class="col-xl-12 col-lg-12 col-md-12" />
                        </div>
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-12">
                        <label for="name">
                            Nội Dung
                        </label>
                        <textarea name="Content" readonly id="description">@Model.contents</textarea>
                        @ViewData["Loi4"]
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}