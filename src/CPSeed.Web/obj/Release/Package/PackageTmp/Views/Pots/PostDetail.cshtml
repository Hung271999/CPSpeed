
@model CPSeed.Models.Post
@Html.Action("Banner", "Home", new { image = "banner-gionglua-v1-637214382473750803.png", title = "Tuyển dụng" })
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left ">
                <div class="product-categori ">
                    <div class="filter-sidebar-left menu-right">
                        <div class="title-left">
                            <h2 class="noo-sh-title" style="">@Resource.Recruitment</h2>
                        </div>
                        @Html.Action("categoryPost", "Pots")
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 post-content">
                <h2 class="noo-sh-title" style="font-size:32px;color:#005b36;">@Model.Title </h2>
                <div class="wp-btn-detail" style="margin:10px 0 20px 0;padding: 10px 0px; border-top: 0.5px solid #005b36;border-bottom: 0.5px solid #005b36;">
                    <div class="btn-detail ">
                        <a style="">Tin CPSeed</a>
                    </div>
                    <p class="btn-detail-time" style="margin-left:10px">@Model.CreateDate</p>
                </div>
                @* <img class="img-fluid" src="~/images/@Model.image" alt="">*@
                <p>@Html.Raw(Model.contents)
            </div>
        </div>
    </div>
</div>
