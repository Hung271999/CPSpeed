.body {
    font-family: UTM-NeoSans-Intel, sans-serif;
}

.all-title-box {
    height: 350px;
}

.all-title-box h2 {
    margin-top: 100px;
}

.all-title-box .breadcrumb {
    margin-top: 100px;
    border-radius: 4px;
    box-shadow: 0px 0px 25px rgb(0 0 0 / 25%);
}

.filter-sidebar-left.menu-right {
    background-color: white;
    box-shadow: 0px 0px 25px rgb(0 0 0 / 25%);
    padding: 20px 20px;
    border-radius: 4px;
    margin-top: -130px;
}

.title-left {
    color: #361800;
    border-bottom: 3px solid #361800;
}

.noo-sh-title {
    font-size: 28px;
    text-transform: uppercase;
    font-weight: 700;
    margin-bottom: 8px;
}

a.list-group-item.list-group-item-action.dad {
    background: #f3f3f3;
    transition: 0.2s;
    font-size: 20px;
    position: relative;
    color: #361800;
    border-radius: 4px;
    margin-bottom: 5px;
    border: 1px solid rgb(0 0 0 / 5%);
    padding: 5px;
}

.list-group-item[data-toggle="collapse"]::after {
    top: 8px;
    right: 30px;
    content: '+';
}

.shop-box-inner {
    padding: 40px 0px;
}

.shop-content-right  {
    padding-left: 50px;
}
.shop-content-right h2 {
    font-size:32px;
    color:#005b36;
}
.shop-content-right p {
    font-size: 20px;
    color: #161616;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    text-align: justify;
    font-family: UTM-NeoSans-Intel, sans-serif;
}

.post-content {
    padding-left: 50px;
}

.spost-content h2 {
    font-size: 32px;
    color: #005b36;
}

.post-content p {
    font-size: 20px;
    color: #161616;
    text-align: justify;
    font-family: UTM-NeoSans-Intel, sans-serif;
}

.product-item-filter {
    border-bottom: 2px solid #005b36;
    border-top: 2px solid #005b36;
    padding: 10px 10px;
}

.bootstrap-select.btn-group .dropdown-menu {
    border-radius: 4px;
    border: 1px solid rgb(0 0 0 / 5%);
    box-shadow: 0px 0px 25px rgb(0 0 0 / 25%);
}
/*product*/
.products-single.fix {
    box-shadow: 0px 0px 25px rgb(0 0 0 / 25%);
}

.mask-icon a.cart:hover {
    background-color: #005b36;
}
.content-news-txt {
    font-size: 20px;
    line-height: 23px;
    transition: 0.3s;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding: 0px;
    color: #161616;
    font-weight: 500;
}
.wp-btn-detail {
    margin-top: 18px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.blog-img {
    box-shadow: 0px 0px 25px rgb(0 0 0 / 25%);
}
.btn-detail {
    color: #363636;
}
    .btn-detail:hover {
        color: #ffffff;
    }
    .btn-detail a {
        background: #ECECEC;
        font-size: 15px;
        line-height: 17px;
        padding: 10px;
        display: inline-block;
        border-radius: 100px;
        transition: all 0.3s;
    }
    .btn-detail a:hover {

        background: #b0b435;
    }

/*register-login-form*/
.register-form {
    height: 100vh;
    background-image: url('../images/banner-login.jpg');
    background-repeat: no-repeat;
    background-size: 100%;
}
.register {
    background: rgba(0,0,0,0.6);
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
}
.content {
    justify-content: center;
}